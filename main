#!/bin/bash
#PBS -l nodes=1:ppn=8,walltime=14:00:00
#PBS -N bl_mrtrix3_preproc
#PBS -V

echo "Preprocessing data..."
time singularity exec -e -B /usr/lib/x86_64-linux-gnu:/hostlib docker://brainlife/mrtrix3:3.0_RC3 bash -c "cd $PWD; ./mrtrix3_preproc.sh"

## check for the output for success
if [ -e dwi.nii.gz ]; then
    exit 0
else
    echo "Final dwi data files are missing."
    exit 1
fi

